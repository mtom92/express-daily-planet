<div class="container">
<h1>All the articles Here</h1>
<a href="/articles/new" class="waves-effect waves-light btn-small"><i class="material-icons right">add_box</i>New Article</a>

<% if(article && article.length > 0) { %>
  <% article.forEach((s)=>{ %>
    <div class="row">
          <div class="col s12 m6">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><%= s.title %></span>
                <p> <%= s.content %></p>
                <p> <%= s.author %></p>
              </div>
            </div>
          </div>
        </div>
  <% }) %>
<%} else{  %>
  <p>Nothing here to see</p>
<% } %>
</div>
